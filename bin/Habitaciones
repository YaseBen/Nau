public class Habitaciones {
    private int nombre;
    private int dreta;
    private int equerra;
    private int amunt;
    private int abaix;
    private String descripcio;
    boolean eina = true;
    boolean donuts = true;
    boolean vestitEspacial = true;
    Random rand = new Random();
    int num = rand.nextInt(0, 6);
    Objectes Objecte[] = new Objectes[num];
    public Habitaciones(int nombre) {
        this.nombre = nombre;
        if(getNombre() == 1){
            this.dreta = -1;
            this.esquerra = 1;
            this.amunt= 1;
            this.abaix = -1;
            this.descripcio = "Dormitori";
        }else if(getNombre() == 2){
            this.dreta = -1;
            this.esquerra = 1;
            this.amunt = -1;
            this.abaix = 1;
            this.descripcio = "Banys";
        }else if(getNombre() == 3){
            this.dreta = 1;
            this.esquerra = 1;
            this.amunt= 1;
            this.abaix= 1;
            this.descripcio = "Oficines";
        }else if(getNombre() == 4){
            this.dreta = -1;
            this.esquerra = -1;
            this.amunt = -1;
            this.abaix = 1;
            this.descripcio = "Taller";
        }else if(getNombre() == 5){
            this.dreta = 1;
            this.esquerra = -1;
            this.amunt = -1;
            this.abaix = 1;
            this.descripcio = "Vestuari";
        }else if(getNombre() == 6){
            this.dreta = 1;
            this.esquerra = -1;
            this.amunt = 1;
            this.abaix = -1;
            this.descripcio = "Cuina";
        }else if(getNombre() == 7){
            this.dreta = 1;
            this.esquerra = 1;
            this.amunt = -1;
            this.abaix = 1;
            this.descripcio = "Menjador";
        }else if(getNombre() == 8){
            this.dreta = -1;
            this.esquerra = -1;
            this.amunt = 1;
            this.abaix = 1;
            this.descripcio = "Sala sortida exterior";
        }else if(getNombre() == 9){
            this.dreta = -1;
            this.esquerra = -1;
            this.amunt = 1;
            this.abaix = -1;
            this.descripcio = "Comandament";
        }else if(getNombre() == 10){
            this.dreta = -1;
            this.esquerra = -1;
            this.amunt = 1;
            this.abaix = -1;
            this.descripcio = "Propulsors";
        }
    }

    public int getNombre() {
        return nombre;
    }
    public int getDreta() {
        return dreta;
    }
    public int getEsquerra() {
        return equerra;
    }
    public int getAmunt() {
        return amunt;
    }
    public int getAbaix() {
        return abaix;
    }
    public int getDescripcio() {
        return descripcio;
    }
    
}

public class MapaHabitaciones {
    int posicioActual;

    public MapaHabitaciones() {
        public static void main(String[] args) {
            // Inicialitzem l'ArrayList amb capacitat per a 10 elements, però encara està buida.
            ArrayList<Habitaciones> mapa = new ArrayList<>(10);
    
            // Afegim 10 habitacions a la llista
            for (int i = 0; i < 10; i++) {
                mapa.add(new Habitaciones("Habitación " + (i + 1)));
            }
    
            // Mostrem les habitacions
            for (Habitaciones habitacion : mapa) {
                System.out.println(habitacion.getNombre());
            }
        }
    }
    // Moure cap a la dreta
    public void moureDreta() {
        if (posicioActual < mapa.size() - 1) {
            posicioActual++;
            System.out.println("Et mous a la dreta. Estàs a: " + mapa.get(posicioActual).getNombre());
        } else {
            System.out.println("No pots moure't més a la dreta.");
        }
    }

    // Moure cap a l'esquerra
    public void moureEsquerra() {
        if (posicioActual > 0) {
            posicioActual--;
            System.out.println("Et mous a l'esquerra. Estàs a: " + mapa.get(posicioActual).getNombre());
        } else {
            System.out.println("No pots moure't més a l'esquerra.");
        }
    }

    // Obtenir la posició actual
    public void mostrarPosicioActual() {
        System.out.println("Estàs a: " + mapa.get(posicioActual).getNombre());
    } }
    